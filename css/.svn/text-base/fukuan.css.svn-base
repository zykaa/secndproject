/*01*/

.thebigheader{
	width: 7.5rem;
    height: 1rem;
    margin-bottom: 0.28rem;
    position: fixed;
    z-index: 100;
    top: 0;
    background-color: #F8F8F8;
}
.thebigheader ul{
	float: left;
}
.thebigheader ul li{
	float: left;
	width:0.86rem;
	height: 0.86rem;
	
}
.thebigheader ul li:nth-child(1){
	line-height: 0.86rem;
	text-align: center;
	color: #ff0103;
	font-size: 0.36rem;
	font-family: "微软雅黑";
}
.thebigheader ul li:nth-child(1) i{
	line-height: 0.86rem;
	font-size: 0.36rem;
}
.thebigheader ul li:nth-child(2){
	font-size: 0.36rem;
	width: 5rem;
	text-align: center;
	line-height: 0.86rem;
	color: #EA0607;
	font-family: "微软雅黑";
}
