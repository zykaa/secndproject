*{	
	margin: 0;
	padding: 0;
}
body{
	padding: 0;
	font-family: "微软雅黑";
}
a{
	text-decoration: none;
	/*style:none;*/	
}
i{
	style:none;
	font-style: normal;
}



/*01*/
.headph{
	position: fixed;
	top: 0;
	width: 100%;
	height: 0.88rem;
	background-color: #f8f8f8;
	line-height: 0.88rem;
    text-align: center;
    font-size: 0.4rem;
    color: #d34647;
}
.headph i{
	float: left;
	padding-left: 0.3rem;
}
.headph b{
	clear: both;
}
/*02*/
.name{
	width: 100%;
	height: 1.5rem;
	margin-top: 1.3rem;
	border-top:dotted #F8F8F8 0.03rem;
	border-bottom:dotted #F8F8F8 0.03rem;
	color: #b5b5b5;
	text-align: center;
}

.name .i1{
	font-size: 0.2rem;
	padding: 0.2rem;
}
.name .i2{
	color: #000000;
	font-size: 0.33rem;
	display: block;
	margin-top: 0.1rem
}
/*03*/
.releve{
	position: fixed;
	bottom: 0.5rem;
	height: 0.9rem;
	line-height: 0.9rem;
	text-align: center;
	border: solid #B5B5B5 0.03rem;
	width: 79%;
	margin: 0 10%;
	
}
.releve i{
	color: #000000;
	font-size: 0.33rem;
}
